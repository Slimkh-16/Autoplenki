        |  его.
    // PRELOADER
    include _preloader
    // PRELOADER
    // wrapper start
    .wrapper.main-page
      // header SECTION
      include _header
      // header SECTION

      //breadcrumbs
      section.breadcrumbs.breadcrumbs--with-head
        .container
          .breadcrumbs-head  Оформление заказа
          ul
            li
              a(href="#") Home
            li
              span Оформление заказа
      //cabinet
      section.cabinet.order-page
        .container
          .row
            .col.l5.m12.s12.right
              .order-cart
                .order-cart-item
                  .order-cart-item__left
                    img(src="assets/images/big1.jpg", alt="") 
                  .order-cart-item__right
                    a(href="#") Антигравийная прозрачная пленка 3М Venture Shield (USA) 0.61
                    .price-box
                      span 1000 грн
                      span.old-price 1100 грн
                    .quantity-wrap
                      span.minus-icon.fa.fa-caret-left
                      input.quantity(type='text', value='1',placeholder="5.5")
                      span.plus-icon.fa.fa-caret-right
                      i пог. м.
                    em.oth-order-txt Закажите 5 м и сэкономьте 100 грн
                .order-cart-item
                  .order-cart-item__left
                    img(src="assets/images/big1.jpg", alt="") 
                  .order-cart-item__right
                    a(href="#") Антигравийная прозрачная пленка 3М Venture Shield (USA) 0.61
                    .price-box
                      span 1000 грн
                      span.old-price 1100 грн
                    .quantity-wrap
                      span.minus-icon.fa.fa-caret-left
                      input.quantity(type='text', value='1',placeholder="5.5")
                      span.plus-icon.fa.fa-caret-right
                      i пог. м.
                    em.oth-order-txt Закажите 5 м и сэкономьте 100 грн
                .order-cart__footer
                  | К оплате: 
                  span.js_order_total 3 300 грн  
                  em.oth-order-txt Вы экономите 300 грн
              .order-links
                a(href="#") Гарантия и оплата
                a(href="#") График работы
                a(href="#") Каталог товаров
            .col.l7.m12.s12
              .order-top-txt
                | Для того, чтобы оформить заказ и зарезервировать товар на складе, необходимо 
                a(href="#registration").modal-trigger зарегистрироваться.
                | Вы можете быть уверены в сохранении конфиденциальности Ваших персональных данных.
              .cabinet-nav
                ul.tabs
                  li.tab
                    a.active(href='#tab1') Новый покупатель
                  li.tab
                    a(href='#tab2') Постоянный покупатель
              .cabinet-container
                #tab1.tab-content
                  form(action="#").js_validate.align-center
                    .row
                      .col.l12.s12
                        .input-field.required-field(data-error="Поле не заполнено")        
                          span.label-field ФИО    
                          input(type="text",required)
                      .col.l6.m12.s12
                        .input-field.required-field(data-error="Поле не заполнено")        
                          span.label-field  Email    
                          input(type="email",required,data-validate="email")
                      .col.l6.m12.s12
                        .input-field.required-field(data-error="Поле не заполнено")        
                          span.label-field  Телефон    
                          input(type="tel",required,data-validate="phone")
                      .col.l12.s12
                        .input-field  
                          span.label-field  Способ оплаты
                          select(name="")
                            option(value="",disabled) Выберите способ оплаты
                            option(value="1",selected) Оплата 1
                            option(value="1") Оплата 2
                            option(value="1") Оплата 3
                      .col.l12.s12
                        a(href="#").on-map Выберите отделение на карте
                      .col.l6.s12
                        .input-field  
                          span.label-field  Тип доставки
                          select(name="")
                            option(value="",disabled) Выберите способ доставки
                            option(value="1",selected) Новая почта
                            option(value="1") Авиалюкс
                            option(value="1") Укрпочта
                      .col.l6.s12
                        .input-field.required-field(data-error="Поле не заполнено")        
                          span.label-field  Отделение    
                          input(type="text",required)
                      .col.s12
                        .check-box
                          input#filled-in-box.filled-in(type='checkbox')
                          label(for='filled-in-box') Я соглашаюсь с политикой конфиденциальности
                    button(type="submit").btn.btn--black.waves-effect.waves-light Заказ подтверждаю
                #tab2.tab-content
                  .row
                    form(action="#").js_validate.align-center
                      .col.l6.m12.s12
                        .input-field.required-field(data-error="Поле не заполнено")        
                          span.label-field  Email    
                          input(type="email",required,data-validate="email")
                      .col.l6.m12.s12
                        .input-field.required-field(data-error="Поле не заполнено")        
                          span.label-field  Пароль    
                          input(type="password")
                      .col.s12
                        .check-box
                          input#filled-in-box2.filled-in(type='checkbox')
                          label(for='filled-in-box2') Я соглашаюсь с политикой конфиденциальности
                      button(type="submit").btn.btn--black.waves-effect.waves-light Заказ подтверждаю
      .above-footer
    include _footer
